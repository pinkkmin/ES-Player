<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--绑定一个DAO接口-->
<mapper namespace="com.player.es.Dao.UserDao">

    <!-- 如果在mybatis-config.xml中不适用类型别名
         那么此处就应该是 <select id="select" resultType="com.player.es.Domain.UserDomain">
    -->
    <select id="getByUserID" parameterType="String" resultType="UserDomain">
    SELECT  * FROM user_info WHERE user_id = #{userID}
    </select>
    <select id="getByUserName" parameterType="String" resultType="UserDomain">
    SELECT  * FROM user_info WHERE user_name = #{userName}
    </select>
    <select id="select" resultType="UserDomain">
    SELECT * FROM user_info
  </select>
</mapper>